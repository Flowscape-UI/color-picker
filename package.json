{
	"name": "@flowscape-ui/design-system-kit",
	"version": "1.0.0",
	"description": "A comprehensive React design system kit with color picker, input range, and other essential UI components. Built with TypeScript and optimized for modern web applications",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./color-picker": {
			"types": "./dist/color-picker/index.d.ts",
			"import": "./dist/color-picker/index.js",
			"require": "./dist/color-picker/index.cjs"
		},
		"./input-number-select": {
			"types": "./dist/input-number-select/index.d.ts",
			"import": "./dist/input-number-select/index.js",
			"require": "./dist/input-number-select/index.cjs"
		},
		"./input-color-picker": {
			"types": "./dist/input-color-picker/index.d.ts",
			"import": "./dist/input-color-picker/index.js",
			"require": "./dist/input-color-picker/index.cjs"
		},
		"./input": {
			"types": "./dist/input/index.d.ts",
			"import": "./dist/input/index.js",
			"require": "./dist/input/index.cjs"
		},
		"./shared": {
			"types": "./dist/shared/index.d.ts",
			"import": "./dist/shared/index.js",
			"require": "./dist/shared/index.cjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"CHANGELOG.md"
	],
	"keywords": [
		"react",
		"design-system",
		"design-system-kit",
		"ui-components",
		"component-library",
		"color-picker",
		"input-range",
		"color",
		"gradient",
		"react-component",
		"typescript",
		"ui",
		"ui-kit",
		"color-selector",
		"rgb",
		"hsl",
		"hex",
		"cmyk",
		"hsv",
		"dark-mode",
		"light-mode",
		"tailwindcss",
		"framer-motion"
	],
	"author": "Flowscape UI",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/flowscape-ui/design-system-kit"
	},
	"bugs": {
		"url": "https://github.com/flowscape-ui/design-system-kit/issues"
	},
	"homepage": "https://github.com/flowscape-ui/design-system-kit#readme",
	"scripts": {
		"dev": "storybook dev -p 6006",
		"build": "tsup",
		"lint": "eslint . --ext .ts,.tsx --max-warnings 0",
		"lint:ts": "tsc --noEmit",
		"format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
		"prepublishOnly": "npm run build",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"build-storybook:gh-pages": "STORYBOOK_BASE_HREF=/design-system-kit/ storybook build",
		"prepare": "husky"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"dom-to-image-more": "^3.7.1",
		"tailwind-merge": "^3.3.1",
		"tinycolor2": "^1.6.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^10.0.5",
		"@storybook/addon-docs": "^9.1.10",
		"@storybook/react-vite": "^9.1.10",
		"@tailwindcss/vite": "^4.1.14",
		"@types/react": "^19.1.16",
		"@types/react-dom": "^19.1.9",
		"@types/tinycolor2": "^1.4.6",
		"conventional-changelog-conventionalcommits": "^7.0.2",
		"eslint": "^9.36.0",
		"eslint-plugin-react-hooks": "^6.1.1",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"lucide-react": "^0.544.0",
		"prettier": "^3.6.2",
		"react": ">=18",
		"react-dom": ">=18",
		"react-icons": "^5.5.0",
		"semantic-release": "^24.1.0",
		"storybook": "^9.1.10",
		"tailwindcss": "^4.1.14",
		"tsup": "^8.5.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.45.0",
		"vite": "^7.1.7"
	},
	"peerDependencies": {
		"framer-motion": ">=10",
		"lucide-react": ">=0.400.0",
		"react": ">=18",
		"react-dom": ">=18",
		"react-icons": ">=5.0.0"
	}
}
